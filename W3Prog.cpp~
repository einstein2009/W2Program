#include <iostream>
#include <string>

using namespace std;

int main()
{
	string isPalindrome;

	cout << "Enter palindrome: " << endl;
	cin  >> isPalindrome;
	cout << endl;

	if (isPalindrome == string (isPalindrome.rbegin(), isPalindrome.rend()))
		cout << isPalindrome << " is a palindrome!" << endl;
	else
		cout << isPalindrome << " is not a palindrome. :(" << endl;
		
		return 0;
}
